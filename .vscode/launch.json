{
	"version": "0.2.0",
	"configurations": [
		// todo-3 This is missing an environment variable: HARDHAT_MODE_CODE=1
		{
			"name": "Debug Hardhat Tests",
			"type": "node",
			"request": "launch",
			// "console": "externalTerminal",

			// Use the Node runtime. Passing --inspect-brk so it pauses on the first line.
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceFolder}/node_modules/.bin/hardhat",
				"test",

				// // Restricting to a single file.
				// "test/tests-src/Bidding.js",

				// Restricting to a grep pattern.
				"--grep",
				"^Bidding The halveEthDutchAuctionEndingBidPrice method$",
			],

			// // Ignore stepping through internal node_modules.
			// "skipFiles": ["<node_internals>/**" ],

			// // Optional: if you want to debug only one test file.
			// "args": ["test/tests-src/MySpec.js"],
		},
	],
}
